<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <LinearLayout android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ht117.htui.loading.SquareCoundDownView
            android:id="@+id/squareCoundDownView"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            app:ht_background="@android:color/holo_blue_light"
            app:ht_interval="250"
            app:ht_duration="7000"
            app:ht_oriented="horizon" />

        <com.ht117.htui.loading.CircleLoadingView
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            app:ht_colorLeft="@android:color/holo_blue_light"
            app:ht_colorTop="@android:color/holo_green_light"
            app:ht_colorRight="@android:color/holo_red_light"
            app:ht_colorBot="@android:color/holo_orange_light"
            app:ht_interval="250"/>

        <com.ht117.htui.loading.CircleCountDownView
            android:id="@+id/circleCountDownView"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ht_txtSize="15sp"
            app:ht_background="@color/colorAccent"
            app:ht_txtColor="@color/colorPrimary"
            app:ht_interval="250"
            app:ht_duration="7000"/>

        <com.ht117.htui.loading.NumberLoadingView
            android:id="@+id/numberLoadingView"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            app:ht_loadedColor="@android:color/holo_red_light"
            app:ht_unloadedColor="@android:color/tertiary_text_light"
            app:ht_txtColor="@color/colorPrimary"
            app:ht_txtSize="15sp"
            app:ht_strokeWidth="3dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <SeekBar
                android:id="@+id/seekDuration"
                android:max="100"
                android:splitTrack="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button android:id="@+id/btnPlay"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"/>

    </LinearLayout>

</RelativeLayout>
